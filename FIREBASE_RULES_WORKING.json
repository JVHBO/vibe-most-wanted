{
  "rules": {
    "rooms": {
      "$roomCode": {
        ".read": true,
        ".write": true
      }
    },

    "matchmaking": {
      "$address": {
        ".read": true,
        ".write": true
      }
    },

    "profiles": {
      "$address": {
        ".read": true,
        ".write": "!data.exists() || newData.child('address').val() == $address"
      }
    },

    "usernames": {
      "$username": {
        ".read": true,
        ".write": "!data.exists()"
      }
    },

    "matches": {
      "$matchId": {
        ".read": true,
        ".write": "!data.exists()"
      }
    }
  }
}
